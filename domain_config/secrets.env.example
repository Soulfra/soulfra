# Soulfra Multi-Domain Secrets Configuration
# Copy this file to config/secrets.env and fill in your actual values
# IMPORTANT: config/secrets.env is gitignored - never commit secrets!

# JWT Authentication
JWT_SECRET=change-this-to-a-random-256-bit-secret
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=168

# Database
DATABASE_URL=sqlite:///soulfra.db

# Domain-specific API keys (optional)
STPETEPROS_GOOGLE_MY_BUSINESS_API_KEY=
CALRIVEN_MLS_API_KEY=
DEATHTODATA_CRYPTO_API_KEY=

# Geolocation (for StPetePros geo-restriction)
IPAPI_KEY=  # Get free key at https://ipapi.co/
MAXMIND_LICENSE_KEY=  # Or use MaxMind GeoLite2

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@soulfra.com

# OAuth (optional - for GitHub/Google login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Twilio (optional - for SMS verification)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe (optional - for payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Development
FLASK_ENV=development
FLASK_DEBUG=True
